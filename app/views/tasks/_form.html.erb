<%= form_for(@task) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  Done ? :
  <%= f.check_box :state%>

  <%= f.label :due_date%>
  <%= f.date_field :due_date%>

  <%= f.label :difficulty%>
  <%= f.number_field :difficulty%>

  <%= f.submit %>
<% end %>
